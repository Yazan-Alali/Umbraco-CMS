@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutSection)Model.Content;
}

<section class="about-form">
    <div class="container">
        <div class="about-content">
            <h4>About us</h4>
            <h2>@content.AboutTitle</h2>
            <p>@content.AboutText</p>
            <div class="signature">
                <img src="@content.AboutSignature.Url()" alt="signature" />
                <p><strong>Thomas J. Watson</strong><br>CEO & Founder</p>
            </div>
        </div>

        <form class="callback-form">
            <h3>Request a call back</h3>
            <p>Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</p>
            <div class="form-group">
                <input type="text" placeholder="Name" required>
            </div>
            <div class="form-group">
                <input type="tel" placeholder="Phone" required>
            </div>
            <div class="form-group">
                <select>
                    <option>Financial consulting</option>
                    <option>Risk Management</option>
                    <option>Tax & Trusts</option>
                </select>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</section>